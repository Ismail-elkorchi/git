{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "object",
	"required": ["schema_version", "claims"],
	"properties": {
		"schema_version": {
			"type": "integer",
			"const": 1
		},
		"claims": {
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "object",
				"required": [
					"id",
					"source_path",
					"source_section",
					"statement",
					"invariant_ids",
					"verification_method",
					"falsification_method",
					"evidence_artifacts"
				],
				"properties": {
					"id": {
						"type": "string",
						"pattern": "^CLM-[A-Z]{4}-[0-9]{4}$"
					},
					"source_path": {
						"type": "string",
						"minLength": 1
					},
					"source_section": {
						"type": "string",
						"enum": ["Success Metrics", "Completeness Targets"]
					},
					"statement": {
						"type": "string",
						"minLength": 1
					},
					"invariant_ids": {
						"type": "array",
						"minItems": 1,
						"items": {
							"type": "string",
							"pattern": "^INV-[A-Z]{4}-[0-9]{4}$"
						}
					},
					"verification_method": {
						"type": "string",
						"enum": ["test", "gate-script", "contract", "e2e", "benchmark"]
					},
					"falsification_method": {
						"type": "string",
						"enum": [
							"gate-failure",
							"counterexample",
							"contract-mismatch",
							"benchmark-regression"
						]
					},
					"evidence_artifacts": {
						"type": "array",
						"minItems": 1,
						"items": {
							"type": "string",
							"pattern": "^artifacts\\/gates\\/INV-[A-Z]{4}-[0-9]{4}\\.json$"
						}
					}
				},
				"additionalProperties": false
			}
		}
	},
	"additionalProperties": false
}
