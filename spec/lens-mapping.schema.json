{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "object",
	"required": ["schema_version", "mappings"],
	"properties": {
		"schema_version": {
			"type": "integer",
			"const": 1
		},
		"mappings": {
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "object",
				"required": ["lens_id", "invariant_ids"],
				"properties": {
					"lens_id": {
						"type": "string",
						"pattern": "^RL-[A-Z]{3}-[0-9]{4}$"
					},
					"invariant_ids": {
						"type": "array",
						"minItems": 1,
						"items": {
							"type": "string",
							"pattern": "^INV-[A-Z]{4}-[0-9]{4}$"
						}
					}
				},
				"additionalProperties": false
			}
		}
	},
	"additionalProperties": false
}
