{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "object",
	"required": ["schema_version", "invariants"],
	"properties": {
		"schema_version": {
			"type": "integer",
			"const": 1
		},
		"invariants": {
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "object",
				"required": [
					"id",
					"kind",
					"statement",
					"rationale",
					"proof_obligation",
					"implementation_surface",
					"activation"
				],
				"properties": {
					"id": {
						"type": "string",
						"pattern": "^INV-[A-Z]{4}-[0-9]{4}$"
					},
					"kind": {
						"type": "string",
						"enum": [
							"feature",
							"architecture",
							"security",
							"quality",
							"operability"
						]
					},
					"statement": {
						"type": "string",
						"minLength": 1
					},
					"rationale": {
						"type": "string",
						"minLength": 1
					},
					"proof_obligation": {
						"type": "object",
						"required": [
							"verification_method",
							"falsification_method",
							"evidence_artifact",
							"reference_tag"
						],
						"properties": {
							"verification_method": {
								"type": "string",
								"enum": [
									"test",
									"lint",
									"typecheck",
									"contract",
									"e2e",
									"gate-script"
								]
							},
							"falsification_method": {
								"type": "string",
								"enum": [
									"gate-failure",
									"counterexample",
									"contract-mismatch",
									"benchmark-regression"
								]
							},
							"evidence_artifact": {
								"type": "string",
								"minLength": 1
							},
							"reference_tag": {
								"type": "string",
								"minLength": 1
							}
						},
						"additionalProperties": false
					},
					"implementation_surface": {
						"type": "object",
						"required": ["files_or_modules"],
						"properties": {
							"files_or_modules": {
								"type": "array",
								"minItems": 1,
								"items": {
									"type": "string",
									"minLength": 1
								}
							}
						},
						"additionalProperties": false
					},
					"activation": {
						"type": "object",
						"required": ["pr_id"],
						"properties": {
							"pr_id": {
								"type": "string",
								"pattern": "^PR-[0-9]{4}$"
							}
						},
						"additionalProperties": false
					}
				},
				"additionalProperties": false
			}
		}
	},
	"additionalProperties": false
}
