{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "object",
	"required": ["schema_version", "baseline_git_version", "families"],
	"properties": {
		"schema_version": {
			"type": "integer",
			"const": 1
		},
		"baseline_git_version": {
			"type": "string",
			"pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
		},
		"families": {
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "object",
				"required": ["id", "section", "matrix_label", "state"],
				"properties": {
					"id": {
						"type": "string",
						"pattern": "^[a-z0-9][a-z0-9-]*$"
					},
					"section": {
						"type": "string",
						"enum": [
							"core-repository-data",
							"working-tree-and-history",
							"transport-and-protocol",
							"newer-git-command-families"
						]
					},
					"matrix_label": {
						"type": "string",
						"minLength": 1
					},
					"state": {
						"type": "string",
						"enum": ["implemented", "partial", "not-implemented"]
					}
				},
				"additionalProperties": false
			}
		}
	},
	"additionalProperties": false
}
